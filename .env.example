# MCP Server OSINT - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# General Configuration
# ============================================================================

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# ============================================================================
# Search Engine Connectors
# ============================================================================

# Google Custom Search
GOOGLE_SEARCH_ENABLED=true
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
GOOGLE_SEARCH_RATE_LIMIT=60

# DuckDuckGo Search
DUCKDUCKGO_SEARCH_ENABLED=true
DUCKDUCKGO_SEARCH_RATE_LIMIT=60

# ============================================================================
# Social Network Connectors
# ============================================================================

# LinkedIn
LINKEDIN_ENABLED=true
LINKEDIN_RATE_LIMIT=30

# Twitter / X
TWITTER_ENABLED=true
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_RATE_LIMIT=30

# ============================================================================
# Username Search
# ============================================================================

USERNAME_SEARCH_ENABLED=true
USERNAME_SEARCH_RATE_LIMIT=20

# ============================================================================
# Breach Indicators
# ============================================================================

# Have I Been Pwned
HIBP_ENABLED=true
HIBP_API_KEY=your_hibp_api_key_here
HIBP_RATE_LIMIT=40

# ============================================================================
# Archive Connectors
# ============================================================================

# Wayback Machine (Internet Archive)
WAYBACK_MACHINE_ENABLED=true
WAYBACK_MACHINE_RATE_LIMIT=20

# Google News Archive
GOOGLE_NEWS_ENABLED=true
GOOGLE_NEWS_API_KEY=your_google_news_api_key_here
GOOGLE_NEWS_RATE_LIMIT=60

# ============================================================================
# Geospatial
# ============================================================================

# GeoNames
GEONAMES_ENABLED=true
GEONAMES_USERNAME=demo
GEONAMES_RATE_LIMIT=60

# ============================================================================
# Public Records
# ============================================================================

# Public Records (jurisdiction-specific)
PUBLIC_RECORDS_ENABLED=false
PUBLIC_RECORDS_JURISDICTION=us
PUBLIC_RECORDS_RATE_LIMIT=30

# ============================================================================
# Notes
# ============================================================================
# - All connectors are enabled by default (except PUBLIC_RECORDS)
# - Set *_ENABLED=false to disable a specific connector
# - Rate limits are requests per minute
# - API keys are required for some services (Google, Twitter, HIBP)
# - For production use, ensure proper API key security
# - Respect rate limits to avoid service disruptions
# ============================================================================
